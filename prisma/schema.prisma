// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id            String    @id @default(cuid()) 
  user_name     String    @unique
  password      String
  userID        String    @unique
  user          User      @relation(fields: [userID], references: [id], onDelete: Cascade) 
}

model User {
  id            String    @id @default(cuid()) 
  email         String?   @unique
  name          String?
  role          String?
  account       Account?
  take_respID   String    
  take_resp     Sport     @relation(fields: [take_respID], references: [id], onDelete: Cascade) 
}

model Sport {
  id            String    @id @default(cuid()) 
  name          String?   @unique
  responsable   User[]
  plan_weekly   Plan[]    
  actualites    Actualite[]
  resultats     Resultat[]
  evenement     Evenement[]

}

model Plan  {
  id            String    @id @default(cuid())
  sportID       String    
  sport         Sport     @relation(fields: [sportID], references: [id], onDelete: Cascade)
  place         String
  hour_date     DateTime

}

model Actualite {
  id            String    @id @default(cuid())
  sportID       String    @unique
  sport         Sport     @relation(fields: [sportID], references: [id], onDelete: Cascade)
}

model Evenement {
  id            String    @id @default(cuid())
  name          String    @unique
  hour_date     DateTime        
  place         String  
  sportID       String    @unique
  sport         Sport     @relation(fields: [sportID], references: [id], onDelete: Cascade)
}

model Resultat {
  id            String    @id @default(cuid())
  sportID       String    @unique
  sport         Sport     @relation(fields: [sportID], references: [id], onDelete: Cascade)
}